<div class="post-list">
	
	<!-- Post -->
	<%= render partial: 'shared/post_head', locals: { post: post } %>
	<p><%= link_to "Comment", new_post_comment_path(post), class: "btn btn-success btn-xs" %></p>

	<!-- Comments -->
	<h3>Comments</h2>
	<ul class="comment_list">
		<%= render partial: 'shared/comment', collection: post.comments.order(created_at: :asc) %>
	</ul>

</div>