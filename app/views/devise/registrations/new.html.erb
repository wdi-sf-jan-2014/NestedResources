<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :name %><br />
  <%= f.text_field :name, :autofocus => true, placeholder: "First and last name" %> </div>

  <div><%= f.label :username %><br />
  <%= f.text_field :username, :autofocus => true, placeholder: "Username" %> </div>

  <div><%= f.label :email %><br />
  <%= f.email_field :email, :autofocus => true, placeholder: "Email" %></div>

  <div><%= f.label :password %><br />
  <%= f.password_field :password, :autofocus => true, placeholder: "Password" %></div>

  <div><%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation, :autofocus => true, placeholder: "Password confirmation" %></div>

  <div><%= f.submit "Sign up" %></div>
<% end %>

<%= render "devise/shared/links" %>
