<h1>New Comment For Post <%= @post.id %></h1>
<div class='row'>
	<div class='col-sm-6'>
  		<fieldset disabled>
			<div class="form-group">
      			<%= label_tag(:link, "Link") %>
      			<%= text_area_tag(:link, @post.link, size: "30x2", class: "form-control") %>
			</div>
			<div class="form-group">
		    	<%= label_tag(:body, "Body") %>
      			<%= text_area_tag(:body, @post.body, size: "30x3", class: "form-control") %>
			</div>
  		</fieldset>
	</div>
</div>
<div class='row'>
	<div class='col-sm-1'>
	</div>
	<div class='col-sm-5'>
  		<%= form_for [@post, @comment] do |f| %>
			<div class="form-group">
      			<%= f.label(:body, "Comment") %>
      			<%= f.text_area(:body, size: "24x6", class: "form-control") %>
			</div>
    		<%= f.submit("Create Comment", class: "btn btn-large btn-primary") %>
  		<% end %>
	</div>
</div>
