<h2>New Post</h2>

<%= form_for @post do |f| %>
  <%= f.label :link %>
  <%= f.text_field :link %> 
  <%= f.label :body %>
  <%= f.text_field :body %> 
  <%= f.fields_for :comments, @post.comments.build do |c| %>
    <%= c.label :body, 'Comment text' %>
    <%= c.text_field :body %>
  <% end %>
  <%= f.submit "Add" %>
<% end %>
