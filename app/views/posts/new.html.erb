<h1>Create a Post</h1>
<div class='col-sm-6'>
  <%= form_for(@post) do |f| %>
    <div class="form-group">
      <%= f.label(:link) %>
      <%= f.text_area(:link, size: "24x6", class: "form-control") %>
    </div>
    <div class="form-group">
      <%= f.label(:body) %>
      <%= f.text_area(:body, size: "24x6", class: "form-control") %>
    </div>
    <%= f.fields_for(:comments, @post.comments.build) do |pc| %>
      <%= f.label(:body) %>
      <%= pc.text_area(:body, size: "24x6", class: "form-control") %>
    <% end %>
    <%= f.submit("Create Post", class: "btn btn-large btn-primary") %>
  <% end %>
</div>
