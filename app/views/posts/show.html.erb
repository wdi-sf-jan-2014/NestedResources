Name: <%= @post.name %>

<div>
Link: <%=link_to @post.link, @post.link, :target => '_blank' %>
</div>

<div>
Body: <%= @post.body %>
</div>

<div>
Posted By: <%= @post.user.email %>
</div>

<%= link_to "Edit Post", edit_post_path(@post) %><br>
<%= link_to 'Delete', post_path(@post), :method => :destroy, :confirm => "Are you sure?" %>
<%= link_to "Back", posts_path %>
<div>
Comments:<br>
<%= link_to "Add Comment", new_post_comment_path(@post) %>
</div>

<% @comments.each do |c| %>
<%= c.comment_body %>--votes( <%=c.counter%> )--<%= link_to "View More Comments", post_comment_path(@post, c.id) %><br>
<% end %>
