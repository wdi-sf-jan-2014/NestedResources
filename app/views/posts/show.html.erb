<h3><%= @post.link %></h3>
<%= @post.body %></br>
<%= link_to "Edit Post", edit_post_path(@post)%>

<h3>Comments: </h3></br>
<% @post.comments.each do |c| %>
	<%= c.body %> <%= link_to "Edit comment", edit_post_comment_path(@post, c) %></br>
<% end %>

<%= link_to "Add a new comment", new_post_comment_path(@post) %></br>
<br><%= link_to "Back to homepage", :root%>